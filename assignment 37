#include <stdio.h>

int main() {
    int i, j, k;
    int n = 4; // total number of rows

    for (i = n; i >= 1; i--) {

        // Print left side numbers (1 to i)
        for (j = 1; j <= i; j++) {
            printf("%d", j);
        }

        // Print spaces in the middle
        for (k = 1; k <= 2 * (n - i); k++) {
            printf(" ");
        }

        // Print right side numbers (i to 1)
        for (j = i; j >= 1; j--) {
            printf("%d", j);
        }

        printf("\n");
    }

    return 0;
}
